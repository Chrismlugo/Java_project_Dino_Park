<p class="pageHeader">Raptors</p>

<div>
    <a href="/raptors/new" class="button center">New Raptor</a>
</div>

<div class="container">
    <table>
        <tr>
            <th>Name</th>
            <th>Species</th>
            <th>Status</th>
            <th>Paddock</th>
        </tr>
        #foreach($raptor in $raptors )
        <tr>
            <td>$raptor.getName()</td>
            <td>$raptor.getSpecies()</td>
            <td>$raptor.hungerLevel()</td>
            <td>$raptor.getPaddock().getName()</td>
            <td><a href="/raptors/$raptor.getId()" class="button center">View</a></td>
            <td><a href="/raptors/$raptor.getId()/edit" class="button center">edit</a></td>
            <td><form action="/raptors/$raptor.getId()/delete" method="post">
                <input type="submit" value="Delete" class="button center">
            </form></td>
        </tr>
        #end
    </table>
</div>